{
  "swagger": "2.0",
  "info": {
    "description": "OAuth2 Service",
    "title": "OAuth2 Service",
    "version": "1.0",
    "contact": {
      "name": "connector@xmdevelopments.com"
    },
    "license": {
      "name": "eCommerceConnector",
      "url": ""
    }
  },
  "host": "HOST_SOURCE",
  "schemes": [
    "http"
  ],
  "basePath": "/",
  "tags": [
    {
      "name": "Api",
      "description": "Api Services"
    }
  ],
  "paths": {
    "/service/oauth/token": {
      "post": {
        "tags": [
          "Api"
        ],
        "summary": "Request/ refresh token",
        "description": "Request/ refresh token",
        "operationId": "postOAuthTokenUsingPOST",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "grant_type",
            "in": "formData",
            "description": "Grant type",
            "required": true,
            "type": "string",
            "subtype": "enum",
            "enum":[
              "password",
              "refresh_token"
            ]
          },
          {
            "name": "username",
            "in": "formData",
            "description": "Username",
            "required": true,
            "type": "string",
            "input": "text"
          },
          {
            "name": "password",
            "in": "formData",
            "description": "Password",
            "required": true,
            "type": "string",
            "input": "password"
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/OAuthToken"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/service/oauth/check_token": {
      "post": {
        "tags": [
          "Api"
        ],
        "summary": "Check / validate token",
        "description": "Request/ refresh token",
        "operationId": "postOAuthCheckTokenUsingPOST",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "token",
            "in": "formData",
            "description": "Token",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/OAuthCheckToken"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "definitions": {
    "OAuthToken": {
      "properties": {
        "access_token": {
          "type": "string"
        },
        "token_type": {
          "type": "string"
        },
        "refresh_token": {
          "type": "string"
        },
        "expires_in": {
          "type": "integer"
        },
        "scope": {
          "type": "string"
        }
      }
    },
    "OAuthCheckToken": {
      "properties": {
        "exp": {
          "type": "integer"
        },
        "user_name": {
          "type": "string"
        },
        "authorities": {
          "type": "string"
        },
        "client_id": {
          "type": "string"
        },
        "scope": {
          "type": "string"
        }
      }
    }
  }
}
